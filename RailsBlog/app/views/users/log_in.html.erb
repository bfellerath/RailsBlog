<h4>please log in</h4>

<%= form_tag '/sessions', method: :post do %>
<div class="row">
    <div class="six columns">

    <%= label_tag :username %>
    <%= text_field_tag :username, "", :class => 'u-full-width' %>
</div>
<div class="six columns">
    <%= label_tag :password %>
    <%= password_field_tag :password, "", :class => 'u-full-width'%>

</div>
</div>

    <%= submit_tag "Submit", :id => 'dark-button3' %>


<% end %>
